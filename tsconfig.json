{
  "compilerOptions": {
    "target": "es2016", // Or ES2020
    "module": "commonjs",
    "outDir": "./dist",  // Compiled JS will go here
    // "rootDir": ".", // If app.ts is in root, rootDir can be . or commented out
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["app.ts"], // ONLY include app.ts for this test
  "exclude": ["node_modules", "dist", "src"] // Exclude src if it exists
}