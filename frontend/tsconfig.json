// frontend/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020", // Compile to modern JavaScript
    "module": "ESNext", // Use ES modules for browser
    "moduleResolution": "node", // How modules are resolved
    "outDir": "./js", // Output compiled JS files to a 'js' directory
    "rootDir": "./ts", // Source TS files are in 'ts'
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true, // Generate source maps for easier debugging
    "lib": ["DOM", "ES2020"] // Include DOM type definitions for browser environment
  },
  "include": ["ts/**/*"], // Only compile files in the 'ts' directory
  "exclude": ["node_modules"]
}