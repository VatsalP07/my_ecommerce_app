{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./js", // Base output directory
    "rootDir": ".",    // Root is the frontend folder
    "esModuleInterop": true,
    "strict": true,
    // ... other options ...
    "baseUrl": ".", // Important for preserving folder structure in outDir
    "paths": { // Optional, but can help with imports
      "ts/*": ["ts/*"],
      "admin/ts/*": ["admin/ts/*"]
    }
  },
  "include": ["ts/**/*.ts", "admin/ts/**/*.ts"],
  "exclude": ["node_modules", "js"] // Exclude the output 'js' folder itself
}