  "scripts": {
    "build:backend": "tsc -p tsconfig.json",
    "build:frontend": "tsc -p frontend/tsconfig.json",
    "build": "npm run build:backend && npm run build:frontend",
    "start": "node dist/app.js",
    "dev:backend": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/app.ts",
    "watch:frontend": "tsc -p frontend/tsconfig.json --watch",
    "dev": "npm-run-all --parallel dev:backend watch:frontend",
